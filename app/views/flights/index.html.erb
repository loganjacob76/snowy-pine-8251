<h1>Flights:</h1>


<% @flights.each do |flight| %>
  <div id="<%= flight.number %>">
    <h3><%= flight.number %> - <%= flight.airline.name %></h3>
    <ul>
      <% flight.passengers.each do |passenger| %>
        <li><%= passenger.name %> <%= button_to 'Remove', flight_passenger_flight_path(flight, passenger), method: :delete %></li>
      <% end %>
    </ul>
  </div>
<% end %>
